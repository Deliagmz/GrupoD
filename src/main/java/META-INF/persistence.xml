<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="jpa.proyecto" transaction-type="RESOURCE_LOCAL">
		<class>es.uma.informatica.jpa.proyecto.Titulacion</class>
		<class>es.uma.informatica.jpa.proyecto.Alumno</class>
		<class>es.uma.informatica.jpa.proyecto.Clase</class>
		<class>es.uma.informatica.jpa.proyecto.Asignaturas</class>
		<class>es.uma.informatica.jpa.proyecto.Optativa</class>
		<class>es.uma.informatica.jpa.proyecto.Centro</class>
		<class>es.uma.informatica.jpa.proyecto.Encuesta</class>
		<class>es.uma.informatica.jpa.proyecto.Expedientes</class>
		<class>es.uma.informatica.jpa.proyecto.Matricula</class>
		<class>es.uma.informatica.jpa.proyecto.Titulacion</class>
		<class>es.uma.informatica.jpa.proyecto.Grupo</class>
		<class>es.uma.informatica.jpa.proyecto.Grupos_Por_Asignatura</class>
		<class>es.uma.informatica.jpa.proyecto.Asignaturas_Matricula</class>
		<class>es.uma.informatica.jpa.proyecto.Optativa</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/sii"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/sii"/>
			<property name="javax.persistence.jdbc.user" value="siiuser"/>
			<property name="javax.persistence.jdbc.password" value="siipassword"/>
	
			<property name="com.mysql.cj.jdbc.Driver" value="com.mysql.cj.jdbc.Driver"/>
			
			<property name="javax.persistence.schema-generation.database.action" value="create"/>
			<property name="javax.persistence.schema-generation.scripts.action" value="drop-and-create"/>
            <property name="javax.persistence.schema-generation.scripts.create-target" value="proyectoCreate.sql"/>
            <property name="javax.persistence.schema-generation.scripts.drop-target" value="proyectoDrop.sql"/>
			
		</properties>
		
	</persistence-unit>
</persistence>